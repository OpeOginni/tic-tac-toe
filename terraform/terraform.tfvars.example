# AWS Configuration
aws_region = "us-east-1"
aws_access_key_id = "your-access-key-id"
aws_secret_access_key = "your-secret-access-key"
aws_session_token = "your-session-token"  # Required for AWS student accounts

# Project Configuration
project_name = "tic-tac-toe"
environment = "production"

# Docker Configuration
docker_hub_username = "your-dockerhub-username"

# Frontend Configuration
frontend_cpu = 256                    # CPU units (1024 = 1 vCPU)
frontend_memory = 512                 # Memory in MB
frontend_desired_capacity = 2         # Desired number of instances
frontend_min_capacity = 1             # Minimum instances
frontend_max_capacity = 10            # Maximum instances

# Backend Configuration
backend_cpu = 256                     # CPU units (1024 = 1 vCPU)
backend_memory = 512                  # Memory in MB
backend_desired_capacity = 2          # Desired number of instances
backend_min_capacity = 1              # Minimum instances
backend_max_capacity = 10             # Maximum instances

# Auto Scaling Configuration
cpu_target_value = 70                 # Target CPU utilization (%)
memory_target_value = 80              # Target memory utilization (%)

# Instance Type (AWS Student Account compatible)
instance_type = "t3.small"            # Options: t3.nano, t3.micro, t3.small, t3.medium, t3.large

